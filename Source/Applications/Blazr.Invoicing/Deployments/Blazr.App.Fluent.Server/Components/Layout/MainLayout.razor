@inherits LayoutComponentBase
<FluentLayout>
    <FluentHeader>
        Blazr FluentUI Invoicing Demo
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent>
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <div>
            &copy; Cold Elm Coders 2024
        </div>
    </FluentFooter>
</FluentLayout>

<FluentDialogProvider />
<FluentToastProvider />
<FluentMessageBarProvider />
<FluentTooltipProvider />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
