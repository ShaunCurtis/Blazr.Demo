@namespace Blazr.App.FluentUI

<FluentGrid Style="padding:1em;" Spacing="1" AdaptiveRendering="true">
    <FluentGridItem sm="12" md="6">
        <FluentTextField Style="width: 100%;"
                         Value="@this.Item.Id.Value.ToString()"
                         Label="Full Id"
                         ReadOnly />
    </FluentGridItem>
    <FluentGridItem sm="12" md="6">
        <FluentTextField Style="width: 100%;"
                         Value="@this.Item.Description"
                         Label="Customer Name"
                         ReadOnly />
    </FluentGridItem>
    <FluentGridItem sm="12" md="6">
        <FluentTextField Style="width: 100%;"
                         Value="@this.Item.Amount.ToString()"
                         Label="Invoice Amount"
                         ReadOnly />
    </FluentGridItem>
</FluentGrid>

@code {
    [Parameter, EditorRequired] public DmoInvoiceItem Item { get; set; } = default!;

    protected override void OnInitialized()
    {
        ArgumentNullException.ThrowIfNull(Item);
    }
}
