@implements IDisposable
@namespace Blazr.App.UI

@inherits BlazrAppPagedListForm<DvoWeatherForecast, WeatherForecastEntity>

<UIListControl TRecord=DvoWeatherForecast Records=this.Service.Records LoadState=this.loadState class="@this.TableCss">
    <RowTemplate>
        <UIListColumn TRecord=DvoWeatherForecast HeaderTitle="ID" SortField="Uid" NoWrap=true> @context.Uid.AsShortGuid()</UIListColumn>
        <UIListColumn TRecord=DvoWeatherForecast HeaderTitle="Date" SortField="Date" NoWrap=true>@context.Date.AsGlobalDate()</UIListColumn>
        <UIListColumn TRecord=DvoWeatherForecast HeaderTitle="Location" SortField="Location">@context.Location</UIListColumn>
        <UIListColumn TRecord=DvoWeatherForecast HeaderTitle="Temp &deg;C" SortField="TemperatureC" NoWrap=true>@context.TemperatureC.AsDegC()</UIListColumn>
        <UIListColumn TRecord=DvoWeatherForecast HeaderTitle="Temp &deg;F" SortField="TemperatureC" NoWrap=true>@context.TemperatureC.AsDegF()</UIListColumn>
        <UIListColumn TRecord=DvoWeatherForecast HeaderTitle="Summary" SortField="Summary" IsMaxColumn=true>@context.Summary</UIListColumn>
        <UIListColumn TRecord=DvoWeatherForecast HeaderTitle="" NoWrap=true class="text-right text-end">
            @this.AuthorizedRowButtonMarkup(context, context.Uid)
        </UIListColumn>
    </RowTemplate>
</UIListControl>


@code {
    [Parameter] public Guid WeatherLocationId { get; set; } = Guid.Empty;

    protected override void OnInitialized()
    {
        if (WeatherLocationId != Guid.Empty)
            this.InitialFilterExpression = (item) => item.WeatherLocationId == this.WeatherLocationId;
    }

    protected override ModalOptions GetAddOptions(ModalOptions? options)
    {
        options = options ?? new();
        options.ControlParameters.Add("WeatherLocationId", this.WeatherLocationId);
        return options;
    }
}
