@namespace Blazr.Demo.UI.Forms
@inherits AppViewerForm<DboWeatherLocation, WeatherLocationEntity>

<UIContainer Size=BootstrapSize.Fluid class="@this.ContainerCss">
    <UILoader State="this.LoadState">
        <FormViewTitle>
            <h2>Weather Location Viewer</h2>
        </FormViewTitle>
        @this.HeaderButtonContainer
        <UIContainer Size=BootstrapSize.Fluid>
            <UIFormRow>
                <UIColumn Columns=12 MediumColumns=6>
                    <FormViewControl Label="Location" Value="this.Service.Record!.Location" ControlType="typeof(InputReadOnlyText)" />
                </UIColumn>
                <UIColumn Columns=12 MediumColumns=6>
                    <FormViewControl Label="Unique Record Identity" Value="this.Service.Record!.WeatherLocationId" ControlType="typeof(InputReadOnlyDisplay)" />
                </UIColumn>
            </UIFormRow>
        </UIContainer>
    </UILoader>
</UIContainer>

@code {

    protected override void OnInitialized()
    {
        this.EditControl = typeof(WeatherLocationEditForm);
    }
}