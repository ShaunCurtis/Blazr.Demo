@namespace Blazr.UI.Bootstap
@inherits ModalDialogBase
@implements IModalDialog

@if (this.Display)
{
    <CascadingValue Value="(IModalDialog)this">
        <div class="modal fade show" style="display:block; background-color: rgb(0,0,0,0.6)" tabindex="-1">
            <div class="modal-dialog @this.Size">
                <div class="modal-content">
                    <div class="modal-body">
                        <DynamicComponent Type=this.ModalContentType Parameters=this.Options.ControlParameters />
                    </div>
                </div>
            </div>
        </div>
    </CascadingValue>
}

@code {
    
    protected string Size => this.Options.TryGet<string>(ModalOptions.__BsSize, out string? value) ? value : "modal-xl";

}
