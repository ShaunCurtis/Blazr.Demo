@namespace Blazr.UI.Bootstrap

@inherits ComponentBase
<div class="@this.Css">
    @ChildContent
</div>
<style>
    .display-on {
        display: inherit;
    }

    .display-off {
        display: none;
    }
</style>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public bool Display { get; set; }

    private string Css => this.Display ? "dislpay-on" : "display-off";
}
